<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_main_screens"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SplashScreenActivity">

    <!-- App Icon with Modern Styling -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="70dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="false"
        app:cardBackgroundColor="@color/card_background"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logonew"
            android:scaleType="centerInside" />

    </com.google.android.material.card.MaterialCardView>

    <!-- App Name -->
    <TextView
        android:id="@+id/app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/app_name"
        android:textColor="@color/primary_60"
        android:textSize="42sp"
        android:textStyle="bold"
        android:letterSpacing="0.05" />

    <!-- Tagline -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Build Better Habits"
        android:textColor="@color/primary_60"
        android:textSize="16sp"
        android:alpha="0.9"
        android:letterSpacing="0.1" />

    <!-- Loading Indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:indicatorColor="@color/primary_60"
        app:trackColor="@color/new_primary"
        app:indicatorSize="32dp"
        app:trackThickness="3dp" />

</LinearLayout>
